#include <stdio.h>
#include <stdlib.h>


int linhas, colunas;


int main(void){
    // solicita ao usuario a quantidade de linhas e colunas.

    printf(" Digite o n° de linhas \n");
    scanf("%d", &linhas);
    printf(" Digite o n° de colunas \n");
    scanf("%d", &colunas);

    int ** matriz = (int **) malloc(linhas * sizeof(int**));
    if (matriz==NULL);
    int cont;
    for (cont =0; cont<linhas; cont++){
    matriz{cont}=(int*) malloc(colunas*sizeof(int));
    }

    int linha, coluna;
    printf("Digite os dados da matriz \n ");
    for (linha = 0; linha<linhas; linha++){
        for (coluna = 0; coluna < colunas; coluna++){
            scanf("%d", &matriz[linha][coluna]);
        }
    }


    int ** matrizT=(int**) malloc (linhas*sizeof(int*));
    if (matrizT==NULL);
    int cont ;
    for (cont = 0; cont<linhas; cont++){
        matrizT[cont]=(int*) malloc(colunas*sizeof(int));

    }
    for (linha=0; linha; linha++){
        for (coluna =0; coluna<colunas; coluna++){
            printf("%d", matriz[linha][coluna]);

        }
        printf("\n ");
    }









return 0;


}
