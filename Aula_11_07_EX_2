#include <stdlib.h>
#include <stdio.h>

struct pessoa{

    char nome[20];
    int idade;
    int rg;
    float altura;

};
typedef struct pessoa;
int main(void){

    struct pessoa var_pessoa[2];

    int indice;
    for (indice=0; indice<2; indice++){

    printf("Digite o nome \n");
    scanf(" % [\n], var_pessoa[indice].nome");

    printf(" Digite a idade \n");
    scanf(" %d, &var_pessoa[indice].idade \n");

    printf("Digite a sua matricula \n");
    scanf ("%d", &var_pessoa[indice].rg);

    printf("Digite a sua matricula \n");
    scanf ("%f", &var_pessoa[indice].altura);

    printf ("Os dados informados: \n  Nome: %s \t Idade: %d rg: %d  Altura: %f", var_pessoa[indice].nome, var_pessoa[indice].idade, var_pessoa[indice].rg, var_pessoa[indice].altura);


    }
    return 0;
}
    
